<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>Snappy</servlet-name>
        <servlet-class>com.queatz.snappy.SnappyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Snappy</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Worker</servlet-name>
        <servlet-class>com.queatz.snappy.Worker</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImageWorker</servlet-name>
        <servlet-class>com.queatz.snappy.ImageWorker</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Worker</servlet-name>
        <url-pattern>/worker</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImageWorker</servlet-name>
        <url-pattern>/image-worker</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StaticServlet</servlet-name>
        <servlet-class>com.queatz.snappy.StaticServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaticServlet</servlet-name>
        <url-pattern>/raw/*</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>org.apache.tomcat.websocket.binaryBufferSize</param-name>
        <param-value>10485760</param-value>
    </context-param>
</web-app>