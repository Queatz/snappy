<?xml version="1.0" encoding="utf-8"?>
<com.queatz.snappy.ui.ScrollStopper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.queatz.snappy.ui.TextView
        android:id="@+id/enableLocation"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/clickable"
        android:text="@string/enable_location"
        android:textSize="@dimen/font_md"/>

    <com.queatz.snappy.ui.TextView
        android:id="@+id/noParties"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/info"
        android:lineSpacingMultiplier="1.5"
        android:text="@string/parties_empty"
        android:textSize="@dimen/font_md" />

</com.queatz.snappy.ui.ScrollStopper>