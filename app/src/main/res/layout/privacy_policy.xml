<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:padding="16dp">

            <com.queatz.snappy.ui.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:textAlignment="center"
                android:text="@string/privacy_policy" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.queatz.snappy.ui.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:text="Village is public" />

            <com.queatz.snappy.ui.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:text="Everything you create, upload, or otherwise make available on Village, with the exception of personal messages between other members, is public on Village, and can potentially be seen by people on and off of Village.\n\nAlso be advised that Village is in early Beta and may contain bugs that may expose personal information." />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.queatz.snappy.ui.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:text="Location and activity" />

            <com.queatz.snappy.ui.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:text="Your physical location is shared with other Village members, up to 250 foot accuracy.\n\nBecause Village lets other members know if you are active, it is possible for other members to know when you are actively using Village." />

        </LinearLayout>

    </LinearLayout>

</ScrollView>