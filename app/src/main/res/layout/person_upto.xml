<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.queatz.snappy.ui.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/updateList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="@dimen/card_spacing"
            android:divider="@android:color/transparent"
            android:footerDividersEnabled="true" />

    </com.queatz.snappy.ui.SwipeRefreshLayout>

    <com.queatz.snappy.ui.TextView
        android:id="@+id/socialMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:textAllCaps="true"
        android:background="@drawable/white_rounded_ripple"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:elevation="4dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:layout_margin="6dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_white_24dp"

        app:elevation="4dp" />

</RelativeLayout>