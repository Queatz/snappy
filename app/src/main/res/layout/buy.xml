<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/welcome"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/rocket"
            android:layout_weight="1" />

        <com.queatz.snappy.ui.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:text="Snappy is $5 per month."
            android:textColor="@color/text"
            android:gravity="center_horizontal"
            android:textSize="22sp"
            android:layout_marginBottom="32dp"
            android:layout_weight="0" />

        <ImageButton
            android:id="@+id/buy_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:minWidth="200dp"
            android:background="@drawable/wallet_button_background"
            android:contentDescription="Buy with Google"
            android:src="@drawable/wallet_button_buy_with_foreground" />
    </LinearLayout>
</RelativeLayout>
