<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/highlight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_highlight"
        android:background="@color/thing_mode" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <com.queatz.snappy.ui.EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/pad_lg"
            android:hint="@string/mode_name"
            android:maxLines="1"
            android:inputType="textShortMessage|textCapWords"
            android:textSize="@dimen/font_md" />

        <com.queatz.snappy.ui.EditText
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/pad_lg"
            android:lineSpacingMultiplier="1.25"
            android:hint="@string/mode_about"
            android:inputType="textLongMessage|textCapSentences|textMultiLine"
            android:textSize="@dimen/font_md" />

    </LinearLayout>

</LinearLayout>